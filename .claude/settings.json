{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "permissions": {
    "allow": [
      "Read",
      "Glob",
      "Grep",
      "Bash(git *)",
      "Bash(gh *)",
      "Bash(ls *)",
      "Bash(mkdir *)",
      "Bash(cat *)",
      "mcp__claude_ai_Notion__notion-fetch",
      "mcp__claude_ai_Notion__notion-create-pages",
      "mcp__claude_ai_Notion__notion-update-page",
      "mcp__linear__list_issues",
      "mcp__linear__create_issue",
      "mcp__linear__list_teams",
      "mcp__linear__get_issue"
    ],
    "deny": [
      "Bash(rm -rf /)",
      "Bash(git push --force *)",
      "Read(.env)"
    ]
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Write",
        "hooks": [
          {
            "type": "command",
            "command": "jq -r '.tool_input.file_path // empty' | grep -q '\\.sdlc/state\\.json$' && echo 'Writing state.json — ensure updated_at is set' || true"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "if [ -f .sdlc/state.json ]; then echo \"Phase: $(jq -r '.phase // \"none\"' .sdlc/state.json) ($(jq -r '.phase_status // \"—\"' .sdlc/state.json))\"; fi"
          }
        ]
      }
    ]
  }
}
